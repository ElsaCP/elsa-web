root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[{Makefile,**.mk,*.go}]
indent_style = tab

[**.{js,jsx,ts,tsx,json,yml,yaml}]
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.txt]
insert_final_newline = false
